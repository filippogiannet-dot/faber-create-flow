{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./api/dist",
    "rootDir": "./api/src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false
  },
  "include": ["api/src/**/*.ts"],
  "exclude": ["node_modules", "api/dist"]
}